<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >

    <data>
        <variable
            name="HomeAllCitiesitmeLayout"
            type="suncere.gansu.androidapp.model.entity.HomeAllCitiesBean"/>
    </data>


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="80px"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_home_pollut"
        android:gravity="center"
        android:padding="4dp"
        >

        <suncere.gansu.androidapp.customview.PollutantNameTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="PM10"
            android:textSize="16sp"
            android:textColor="#fff"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可吸入颗粒物"
            android:textSize="14sp"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{HomeAllCitiesitmeLayout.PM10 + @string/ug}"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bg_home_pollut"
            android:gravity="center"
            android:padding="4dp"
            >

            <suncere.gansu.androidapp.customview.PollutantNameTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5"
                android:textSize="16sp"
                android:textColor="#fff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="细颗粒物"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{HomeAllCitiesitmeLayout.PM2_5 + @string/ug}"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_home_pollut"
            android:gravity="center"
            android:padding="4dp"
            >

            <suncere.gansu.androidapp.customview.PollutantNameTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO2"
                android:textSize="16sp"
                android:textColor="#fff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="二氧化氮"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{HomeAllCitiesitmeLayout.NO2 + @string/ug}"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dp"
        android:visibility="invisible"
        android:background="#fff"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_home_pollut"
            android:gravity="center"
            android:padding="4dp"
            >

            <suncere.gansu.androidapp.customview.PollutantNameTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SO2"
                android:textSize="16sp"
                android:textColor="#fff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="二氧化硫"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{HomeAllCitiesitmeLayout.SO2 + @string/ug}"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bg_home_pollut"
            android:gravity="center"
            android:padding="4dp"
            >
            <suncere.gansu.androidapp.customview.PollutantNameTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O3"
                android:textSize="16sp"
                android:textColor="#fff"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="臭氧"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{HomeAllCitiesitmeLayout.o3 + @string/ug}"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_home_pollut"
            android:gravity="center"
            android:padding="4dp"
            >

            <suncere.gansu.androidapp.customview.PollutantNameTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO"
                android:textSize="16sp"
                android:textColor="#fff"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一氧化碳"
                android:textSize="14sp"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{HomeAllCitiesitmeLayout.CO +@string/mg}"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</layout>