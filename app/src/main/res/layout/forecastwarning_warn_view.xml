<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" 
    android:gravity="center">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:orientation="vertical" 
        android:background="@drawable/round_rect_white_pal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp" >

            <TextView
                android:id="@+id/fw_dialogViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="预警信息"
                android:textColor="#E92810"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/fw_dialogView_colse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/close" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#7fE2E2E2" />
        
        <TextView 
            android:id="@+id/fw_dialogView_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="14dp"
            android:textColor="#333333"
            android:text="10月31号站点1浓度值超上限，警报，站点1浓度值超上限，警报，站点1浓度值超上限，警报，站点1浓度值超上限，警报，站点1浓度值超上限，警报，站点1浓度值超上限，警报，站点1浓度值超上限，警报，站点1浓度值超上限，警报，站点1浓度值超上限"
            />
        
    </LinearLayout>

</LinearLayout>